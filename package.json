{
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "babel-jest": "^27.4.2",
    "jest": "^27.4.3",
    "jest-puppeteer": "^6.0.2",
    "puppeteer": "^11.0.0"
  },
  "scripts": {
    "test": "jest --passWithNoTests --coverage",
    "build": "parcel build source/index.html"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "verbose": true
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-modules-commonjs"
        ]
      }
    }
  }
}
